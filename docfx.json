{
  "build": {
    "content": [
      {
        "files": [
          "pages/**/*.md",
          "pages/**/*.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "assets/**",
          "pages/**/media/**"
        ]
      }
    ],
    "output": "_site",
	"exportViewModel": true,
    "template": [ "default", "modern", "template" ],
	"globalMetadata": {
      "_appName": "ezEngine",
	  "_appTitle": "ezEngine",
	  "_appLogoPath": "assets/images/EZ-text.svg",
	  "_appFaviconPath": "assets/images/favicon.svg",
	  "_enableSearch": true,
	  "_enableGoogleAnalytics": true,
	  "_enableNewTab": true,
	  "_appFooter": "Hello",
	  "_gitContribute": {
		  "repo": "https://github.com/ezEngine/docs-src",
		  "branch": "main"
	  }
	}
  }
}